@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model VocationManager.Services.DTOs.Teams.CreateTeamDto;

@{
    ViewData["Title"] = "Create";
}

<div class="card light-shadow m-0 m-auto col-5">
    <div class="img-fluid text-center mt-2">
        <img class="card-img-top img-fluid" style="width: 20rem" style="object-fit: contain" src="https://cdn.pixabay.com/photo/2017/05/04/16/37/meeting-2284501_960_720.jpg" alt="team image">
    </div>
    <div class="card-body">
        <h5 class="card-title">Create team</h5>
        <div>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <br/>
                <div class="form-group d-flex justify-content-evenly">
                    <a asp-action="Index">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-backward"></i> Back to List
                        </button>
                    </a>

                    <input type="submit" value="Create" class="btn btn-success"/>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
